--- 
import Layout from "../../layouts/basic.astro";

import SimpleVue from "../../vue/simple.vue";
import RcSelect from "../../react/arena/rc-select"
import SvgMisc from "../../react/arena/svg-misc"

export const prerender = true;

export const Arenas = {
    SimpleVue,
    SvgMisc,
    RcSelect
}

export function toKebabCase(str: string): string {
  return str.replace(/[A-Z]/g, (match, index) => (index !== 0 ? "-" : "") + match.toLowerCase());
}

export async function getStaticPaths () {
    return Object.keys(Arenas).map(k => {
        return {
            params: { name: toKebabCase(k) }
        }
    })
}

const { name } = Astro.params;
---

<Layout title={name!}>
    { name === "simple-vue" && <SimpleVue client:load /> }
    { name === "rc-select" && <RcSelect client:load /> }
    { name === "svg-misc" && <SvgMisc client:load /> } 
</Layout>
