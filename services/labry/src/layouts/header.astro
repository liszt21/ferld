        <HeaderLink href="/">HOME</HeaderLink>
        <HeaderLink href="/code">CODE</HeaderLink>
        <HeaderLink href="/blog">BLOG</HeaderLink>
        <HeaderLink href="/tool">TOOL</HeaderLink>
    </nav>

    <div class="flex-grow flex-shrink"></div>

    <HeaderLink href="/user">USER</HeaderLink>
</header>
